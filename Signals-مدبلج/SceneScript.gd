# الاسم في المشهد: الصحة
# نوع العقدة: عقدة ثنائية الأبعاد
extends Node2D
signal انتهت_اللعبة
@onready var عقدة_اللاعب = get_node('Player') 

func _ready():
	عقدة_اللاعب.connect("الصحة_تغيرت",افعل_شيئا)

func افعل_شيئا(صحة_اللاعب):
	print('لقد قمنا بتغيير قيمة الصحة إلى: ', صحة_اللاعب)
	emit_signal("انتهت_اللعبة")

# الاسم في المشهد: اللاعب
# نوع العقدة: شبح
extends Sprite2D
signal الصحة_تغيرت

var يفحص: int = 0
var صحة_اللاعب: int = 100

func _process(_deltaTime):
	if يفحص < 1:
		يفحص = يفحص + 1
		تغيير_الصحة(-100)

func تغيير_الصحة(قيمة):
	صحة_اللاعب = صحة_اللاعب + قيمة
	emit_signal("الصحة_تغيرت", صحة_اللاعب)
	
